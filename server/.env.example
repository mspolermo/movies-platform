# ===========================================
# Общие настройки для Movies Platform
# ===========================================

# Окружение
NODE_ENV=development

# JWT настройки
PRIVATE_KEY=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=124h

# Базы данных
POSTGRES_USER=root
POSTGRES_PASSWORD=root
POSTGRES_DB_KINO=kino
POSTGRES_DB_USER=user

# RabbitMQ
RABBITMQ_URL=amqp://rabbitmq:5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# Очереди RabbitMQ
USERS_QUEUE=users_queue
FILMS_QUEUE=films_queue

# Порты сервисов
API_GATEWAY_PORT=5000
AUTH_USERS_PORT=3001
KINO_DB_PORT=3002

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# PgAdmin Configuration
PGADMIN_EMAIL=root@root.com
PGADMIN_PASSWORD=root
